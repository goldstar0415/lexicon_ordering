<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lexicon</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<body class="transparent home welcompage">
    <div class="bodyBg"></div>
    <div class="overlayBlue"></div>
    <div class="pageWrap">
        <!-- Header -->
        <div class="header rPos">
            <div class="grid rPos">
                <div class="row">
                    <div class="c2">
                        <div class="logo">
                            <a href="/"><%= image_tag "logo.png", alt: 'Lexicon' %></a>
                        </div>
                    </div>

                    <div class="c10">
                        <h1 class="primaryColor headerTitle">Lexicon Resource and Materials Center</h1>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main rPos primaryColor">
            <div class="grid">
                <div class="row">
                    <div class="c16 s3">


					
												<%= form_for(:password_reset, url: password_resets_path) do |f| %>
													<div style="color:#e91e63;font-size:17px;padding-left:5px;background:#fff;line-height:30px;width:600px;">
													  <% if request.post? -%>
														<%= image_tag "/error-icon.png", size: "18x18", style: "display:inline;"%>&nbsp; Your username or password is incorrect. 
													  <% end -%>
													</div>
													<div class="field">
														<%= f.label :email %><br />
														<%= f.email_field :email, autofocus: true %>
													</div>
													
													<br/>							
													<div class="actions">
														<%= f.submit "Submit", id: "reset-form-submit", style: "display:none;"  %>
														<a class="primaryButton" style="display:block;width:120px;text-align:center;" href="#" onclick="document.getElementById('reset-form-submit').click();return false;">Submit</a>
													</div>
												<% end %>
                      
                    </div>
                </div>
                
                
                
                
                
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    
    <!-- Footer -->
    <div class="footer rPos">
        <div class="grid">
            <div class="row">
                <div class="c2">
                    <div class="footerLogo">
                        <%= image_tag "logo.png", alt: 'Lexicon' %>
                    </div>
                </div>
                <div class="c10">
                    <p>Corporate Headquarters: 8800 Technology Forest Place &bull; The Woodlands, Texas 77381-1160</p>
                    <p>Phone: 281.863.3000 | Toll Free: 855.828.4651 | Fax: 281.863.8088</p>
                </div>
            </div>
        </div>
    </div>
    
    
    
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
</body>
</html>